<div class="position-relative d-flex p-0" id="top">
        <!-- Spinner Start -->
        <%= render "shared/sidebar" %>
            <!-- Navbar End -->

            <!-- Start Content -->
            <div class="content pb-3">
              <%= render "shared/navbar" %>
            <!-- Start Content -->
            <div class="container-fluid py-2 px-3 mt-3">
                <div class="card-panel bg-white p-4 radius-10">

                    <div class="d-flex flex-wrap justify-content-between align-items-center page-header">
                        <h1 class="h2 mb-2">Edit Profile</h1> 
                    </div>


                    
                    <%= form_for @info,url:updateprofile_path do |f| %>
                        <div class="row">  
                            <div class="col-md-4 col-lg-3 mt-3">
                                <label class="mb-2 text-capitalize">First Name</label>
                                <div class="mb-4">
                                    <%= f.text_field :fname,placeholder:"Type here", class:"form-control form-control-sm ",required:"true" ,onkeypress:"return Validate(event);"%>
                                    <span id="error_name" style="color:red;"> Enter only alphabets</span>
                                </div>
                            </div>
                            <div class="col-md-4 col-lg-3 mt-3">
                                <label class="mb-2 text-capitalize">Last Name</label>
                                <div class="mb-4">
                                    <%= f.text_field :lname,placeholder:"Type here", class:"form-control form-control-sm",required:"true"%>
                                </div>
                            </div>
                            <div class="col-md-4 col-lg-3 mt-3">
                                <label class="mb-2 text-capitalize">Gender</label>
                                <div class="mb-4">
                                    <%= f.select(:gender, ["Male", "Female", "Other"], {}, { :class => 'form-control form-control-sm' })  %>
                                </div>
                                
                            </div>
                            <div class="col-md-4 col-lg-3 mt-3">
                                <label class="mb-2 text-capitalize">Age</label>
                                <div class="mb-4">
                                    <%= f.number_field :age,placeholder:"Type here", class:"form-control form-control-sm",required:"true"%>
                                </div>
                            </div>
                             <div class="col-md-4 col-lg-3 mt-3">
                                <label class="mb-2 text-capitalize">Address</label>
                                <div class="mb-4">
                                    <%= f.text_area :address,placeholder:"Type here", class:"form-control form-control-sm", required:"true"%>
                                </div>
                                
                            </div>
                        </div>
                        <div class="d-flex justify-content-end text-end mt-4">
                            <%= f.submit "Update",class:"btn btn-md btn-primary"%>

                        </div>

                    <% end %>
                   

                </div>
            </div>

        </div>
        <!-- End Content  -->
    </div>
    <!-- End -->

    <!-- Start Add Rules -->
    <div class="modal fade" id="addRules" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-capitalize" id="staticBackdropLabel">Add Rule</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="rules.html">
                    <div class="modal-body p-4">
                        <div class="row">
                            <div class="col-md-6">
                                <label class="mb-2 text-capitalize">Country</label>
                                <div class="mb-4">
                                    <select class="form-control">
                                        <option>Australia</option>
                                        <option>Newzeland</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="mb-2 text-capitalize">Rule Name</label>
                                <div class="mb-4">
                                    <input type="text" placeholder="Type here" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="mb-2 text-capitalize">Type</label>
                                <div class="mb-4">
                                    <select class="form-control">
                                        <option>Fixed</option>
                                        <option>Percentage</option>
                                    </select>   
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="mb-2 text-capitalize">Value</label>
                                <div class="mb-4">
                                    <input type="number" placeholder="Type here" class="form-control" required />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-md btn-outline-primary"
                            data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-md btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- End End Rules -->


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Template Javascript -->
    <script src="assets/js/main.js"></script>
    <script>
        $('#selectAll').click(function (e) {
            $(this).closest('table').find('td input:checkbox').prop('checked', this.checked);
        });
    </script>